<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3F3"
    android:backgroundTint="#F5F3F3"
    tools:context=".Signup">



    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:minHeight="48dp"
        android:onClick="launchSigninActivity"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Sudah Punya Akun?"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daftarSignup">
    </Button>

    <Button
        android:id="@+id/daftarSignup"
        android:layout_width="234dp"
        android:layout_height="57dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="#FE3D3D"
        android:text="Daftar"
        android:textAllCaps="false"
        android:onClick="launchMainActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">
    </Button>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="331dp"
        android:layout_height="92dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#FFFFFF"
        android:paddingLeft="10dp"
        android:shadowColor="#3A3A3A"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Nama"
        android:textColor="#0B0A0A"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextEmail"
        android:layout_width="331dp"
        android:layout_height="92dp"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="332dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#FFFFFF"
        android:paddingLeft="10dp"
        android:shadowColor="#3A3A3A"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Email
"
        android:textColor="#0B0A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="331dp"
        android:layout_height="92dp"
        android:layout_marginBottom="252dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#FFFFFF"
        android:paddingLeft="10dp"
        android:shadowColor="#3A3A3A"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Password"
        android:textColor="#0B0A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="331dp"
        android:layout_height="92dp"
        android:layout_marginBottom="252dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#FFFFFF"
        android:paddingLeft="10dp"
        android:shadowColor="#3A3A3A"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Password"
        android:textColor="#0B0A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextEmailNew"
        android:layout_width="327dp"
        android:layout_height="66dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="Masukkan Email"
        android:textSize="14sp"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmail"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
        app:layout_constraintStart_toStartOf="@+id/editTextEmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextNama"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextNama"
        android:layout_width="333dp"
        android:layout_height="54dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="38dp"
        android:ems="10"
        android:hint="Masukkan Nama"
        android:textSize="14sp"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:passwordToggleEnabled="true"
        app:boxBackgroundColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/daftarSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="332dp"
            android:layout_height="65dp"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="78dp"
            android:ems="10"
            android:hint="Masukkan Password"
            android:textSize="14sp"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="228dp"
        android:layout_height="119dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#FE3D3D"
        android:gravity="center"
        android:text=" CLEAN SHOES.ID"
        android:textColor="#FFFFFF"
        android:textSize="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

</androidx.constraintlayout.widget.ConstraintLayout>