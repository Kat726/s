<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_for_pesanan"
    android:backgroundTint="#FFE9E9"
    tools:context=".bottombar.PesananActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/leftarrow"
                    />
                <TextView
                    android:layout_width="190dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Checkout"
                    android:onClick="launchDeepClean2PilihTreatmentDeskripsiActivity"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"
                android:background="#F4CECE">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/shopaholicstextbubble"
                    />
                <TextView
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Ini halaman Terakhir dari proses pemesanan.Pastikan semua terisi dengan benar ya :)"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/card_pesanan"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginTop="170dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                tools:listitem="@layout/layout_pesanan_activity">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/pengirimandanpembayaran"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="310dp"
                android:background="#75FDADAD">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Pengiriman dan Pembayaran"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_marginTop="345dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/rectangle_48">

                <TextView
                    android:id="@+id/btn_pck_address"
                    android:layout_width="190dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="10dp"
                    android:onClick="launch"
                    android:text="Pilih Alamat Penjemputan"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/arrow_right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="380dp"
                android:layout_marginStart="32dp">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="20dp"
                    android:text="Pilih Kurir Penjemputan"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/arrow_right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="430dp"
                android:layout_marginStart="32dp">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="20dp"
                    android:text="Pilih Metode Pembayaran"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/arrow_right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="520dp"
                android:background="@drawable/rectangle_48"
                >

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="10dp"
                    android:text="Jadwal Pengembalian"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="565dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:text="Pilih Tanggal"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="565dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:text="Pilih Waktu"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="590dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:src="@drawable/promoajakak"/>

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Pilih Metode Pembayaran"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/arrow_right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="630dp">
                <TextView
                    android:layout_width="190dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Total Bayar"
                    android:textColor="@color/black"
                    />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="100dp"
                    android:backgroundTint="#FE3D3D"
                    android:text="Bayar"
                    android:textAllCaps="false"
                    />
            </LinearLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.drawerlayout.widget.DrawerLayout>
