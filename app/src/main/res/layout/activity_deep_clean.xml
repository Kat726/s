<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F5F3F3"
    tools:context=".DeepCleanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp">

        <ImageView
            android:id="@+id/gambarDeepDetailing"
            android:layout_width="wrap_content"
            android:layout_height="223dp"
            android:src="@drawable/deepcleaningimage"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/DeepCleaningFirst"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/whitelayer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deep_cleaning"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DeepCleaningFirst"
        android:layout_alignTop="@+id/DeepCleaningFirst"
        android:layout_alignEnd="@+id/DeepCleaningFirst"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="67sp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="16dp">

        <RatingBar
            android:id="@+id/MyRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="210dp"
        >

        <TextView
            android:id="@+id/mulaiDari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mulai dari"
            android:textSize="11sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="226dp"
        >

        <TextView
            android:id="@+id/detailHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp35.000,00"
            android:textSize="11sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="176dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="280dp"
        app:cardCornerRadius="29dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp">

            <TextView
                android:id="@+id/penjalasanPertama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deep Cleaning Treatment Package for 5 Pair Shoes !"
                android:textSize="11sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70sp">

            <TextView
                android:id="@+id/penjelasanKedua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deep Cleaning Treatment Package for 4 Pair Shoes !"
                android:layout_marginLeft="15dp"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="99sp">

            <TextView
                android:id="@+id/penjelasanKetiga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Express deep cleaing that only takes 24 hours to complete"
                android:layout_marginLeft="15dp"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="139sp">

            <TextView
                android:id="@+id/penjelasanKeempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deep Cleaning Treatment On The Spot!"
                android:layout_marginLeft="15dp"
                android:textSize="11sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="176dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="462dp"
        app:cardCornerRadius="29dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ulasanDanPenelitian"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Ulasan dan Penelitian"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/rating"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="53dp"
                android:hint="4.0"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="41dp">

            <RatingBar
                android:id="@+id/MyRating2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="649dp"
        app:cardCornerRadius="29dp">

        <Button
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:text="Pesan"
            android:onClick="launchDeepClean2PilihTreatmentDeskripsiActivity"
            android:textAllCaps="false"
            android:backgroundTint="#FE3D3D"
            />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/arrow_to_left"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="#00D6B6B6"
        android:onClick="launchHomeMenuActivitity"
        android:src="@drawable/leftarrow"
        app:backgroundTint="@color/white"/>


</RelativeLayout>